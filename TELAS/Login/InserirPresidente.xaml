<Window x:Class="Login.InserirPresidente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="MAVMTX" Height="813.634" Width="743.988">
    <Grid>
        <GroupBox Header="Administrar Presidentes" HorizontalAlignment="Left" Height="423" Margin="10,10,0,0" VerticalAlignment="Top" Width="559">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Nome:" VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="109,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="103"/>
                <TextBox x:Name="nomepretxt" HorizontalAlignment="Left" Height="23" Margin="119,12,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,67,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top"/>
                <TextBox x:Name="emailpretxt" HorizontalAlignment="Left" Height="23" Margin="119,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,123,0,0" TextWrapping="Wrap" Text="Fone:" VerticalAlignment="Top"/>
                <TextBox x:Name="fonepretxt" HorizontalAlignment="Left" Height="23" Margin="119,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap" Text="Nascimento:" VerticalAlignment="Top"/>
                <TextBox x:Name="nascpretxt" HorizontalAlignment="Left" Height="23" Margin="119,169,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <Button Content="Inserir" HorizontalAlignment="Left" Margin="10,331,0,0" VerticalAlignment="Top" Width="98" Click="Insert_Presidente"/>
                <Button Content="Voltar" HorizontalAlignment="Left" Margin="424,363,0,13" Width="113" Background="#FFFCBAFF" Click="Button_Voltar"/>
                <Button Content="Listar" HorizontalAlignment="Left" Margin="126,331,0,0" VerticalAlignment="Top" Width="113" Click="Button_Listar"/>
                <Image x:Name="image" HorizontalAlignment="Left" Height="251" Margin="325,36,0,0" VerticalAlignment="Top" Width="178"/>
                <Button Content="Escolher foto" HorizontalAlignment="Left" Margin="377,331,0,0" VerticalAlignment="Top" Width="75" Click="FotoClick"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,222,0,0" TextWrapping="Wrap" Text="Senha" VerticalAlignment="Top"/>
                <PasswordBox x:Name="senha" HorizontalAlignment="Left" Height="23" Margin="119,215,0,0"  VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,271,0,0" TextWrapping="Wrap" Text="Conf. Senha:" VerticalAlignment="Top"/>
                <PasswordBox x:Name="confsenha" HorizontalAlignment="Left" Height="23" Margin="119,271,0,0" VerticalAlignment="Top" Width="120"/>

            </Grid>
        </GroupBox>

        <GroupBox Header="Deletar" HorizontalAlignment="Left" Height="64" Margin="10,445,0,0" VerticalAlignment="Top" Width="321">
            <Grid>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Margin="23,16,0,0"/>
                <TextBox x:Name="idpretxt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="80,10,0,0" RenderTransformOrigin="0.233,0.609"/>
                <Button Content="Deletar" HorizontalAlignment="Left" Margin="223,10,0,0" VerticalAlignment="Top" Width="76" Click="Button_Deletar"/>

            </Grid>
        </GroupBox>

        <GroupBox Header="Listar Presidentes" HorizontalAlignment="Left" Height="243" Margin="10,514,0,0" VerticalAlignment="Top" Width="559">
            <ListBox x:Name="listapre" HorizontalAlignment="Left" Height="207" Margin="10,10,0,0" VerticalAlignment="Top" Width="530"/>
        </GroupBox>
        <GroupBox Header="Atualizar" HorizontalAlignment="Left" Height="64" Margin="355,445,0,0" VerticalAlignment="Top" Width="321">
            <Grid>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Margin="23,16,0,0"/>
                <TextBox x:Name="idpretxt2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="68,11,0,0" RenderTransformOrigin="0.233,0.609"/>
                <Button Content="Atualizar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="206,11,0,0" Click="Button_Atualizar"/>


            </Grid>
        </GroupBox>

    </Grid>
</Window>
